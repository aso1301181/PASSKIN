ã€€<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.ac.demekin.passkin.MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="350"
        android:layout_height="100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:src="@drawable/title" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="130"
        android:layout_height="130"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        android:src="@drawable/top4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="130"
        android:layout_height="130"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="20dp"
        android:src="@drawable/top1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="130"
        android:layout_height="130"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView4"
        android:src="@drawable/top3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="130"
        android:layout_height="130"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@+id/imageView3"
        android:src="@drawable/top2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="14dp"
        android:maxWidth="30dp"
        android:scaleType="fitStart"
        android:src="@drawable/top5" />

</RelativeLayout>
